{
    "name": "Furbooru Tagging Assistant (Rewrite)",
    "version": "0.0.1",
    "manifest_version": 3,
    "host_permissions": [
        "*://*.furbooru.org/"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.furbooru.org/",
                "*://*.furbooru.org/images?*",
                "*://*.furbooru.org/search?*",
                "*://*.furbooru.org/tags/*"
            ],
            "js": [
                "src/content/listing.js"
            ],
            "css": [
                "src/styles/content/listing.scss"
            ]
        },
        {
            "matches": [
                "*://*.furbooru.org/*"
            ],
            "js": [
                "src/content/header.js"
            ],
            "css": [
                "src/styles/content/header.scss"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage"
    ]
}
